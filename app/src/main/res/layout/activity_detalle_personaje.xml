<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallePersonaje">

    <TextView
        android:id="@+id/DetalleNombrePersonaje"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Nombre personaje"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/DetalleImagen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/DetallePoderes"
        app:layout_constraintTop_toBottomOf="@+id/DetalleNombrePersonaje" />

    <TextView
        android:id="@+id/DetallePoderes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="super poderes que tiene el personaje"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DetalleImagen" />


</androidx.constraintlayout.widget.ConstraintLayout>