<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/celdaPersonajeImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/celdaPersonajeTextViewNombre"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:hint="Nombre del personaje"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@+id/celdaPersonajeImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celdaPersonajeTextViewEditora"
        />

    <TextView
        android:id="@+id/celdaPersonajeTextViewEditora"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/celdaPersonajeImageView"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="DC Comics"
        android:gravity="center_vertical"
        android:textSize="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>